<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!--namespace全类名-->
<mapper namespace="com.ksedu.labsystem.dao.RightMapper">
    <resultMap id="menuTree" type="com.ksedu.labsystem.pojo.Right">
        <id column="id" property="id"></id>
        <result column="title" property="title"></result>
        <result column="path" property="path"></result>
        <result column="icon" property="icon"></result>
        <collection property="children" select="getMenuChildren" ofType="com.ksedu.labsystem.pojo.Right"
                    column="id">

        </collection>
    </resultMap>
    <select id="getMenuChildren" resultMap="menuTree">
        SELECT
            id,title,path,icon
        FROM rights
        WHERE parent_id=#{myid}
    </select>


    <select id="getRightList" resultMap="menuTree">
        SELECT *
        FROM rights
        WHERE parent_id=0
    </select>

</mapper>